{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "jsx": "preserve",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleDetection": "force"
  },
  "include": [
    "electron/**/*.ts",
    "renderer/**/*.ts",
    "renderer/**/*.vue",
    "shared/**/*.ts",
    "scripts/**/*.ts"
  ]
}
